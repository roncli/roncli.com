{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "lib": ["es2022"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./.vscode/ts",
        "resolveJsonModule": true,
        "target": "es2017"
    },
    "include": [
        "**/*.js",
        "types/modules/*.d.ts",
        "types/node/*.d.ts"
    ]
}
