<div class="col-xs-8">
    {{{page.attributes.page.content}}}
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h3>{{tag}}</h3></div>
        <div class="panel-body">
            <div class="text-center"><button class="btn btn-primary navbar-btn" id="add-all-to-media-player"><span class="glyphicon glyphicon-plus"></span><span class="glyphicon glyphicon-music"></span> Add All To Playlist</button></div><br />
            <div class="text-center" style="margin-bottom: 10px;">
                <h4 class="text-center" style="margin-bottom: 3px;" id="song-title">{{songs.models.0.attributes.title}}</h4>
                <div class="text-center" id="song-player">
                    {{partial "music/song" resolvedUrl=songs.models.0.attributes.audioUrl}}
                </div>
            </div>
            {{#each songs.models}}
                <div class="navbar navbar-default song" data-audio-url="{{attributes.audioUrl}}" data-title="{{attributes.title}}" style="background-color: #eeeeee; border: solid 1px #cccccc;">
                    <div class="container-fluid">
                        <div class="navbar-left" style="margin-right: 20px;">
                            <ul class="nav navbar-nav">
                                <li class="navbar-text" style="font-size: 20px; padding: 10px 0;"><div><a href="{{attributes.url}}">{{attributes.title}}</a></div></li>
                            </ul>
                        </div>
                        <div class="navbar-right" style="margin-right: 0;">
                            <ul class="nav">
                                <li>
                                    <div>
                                        <button class="btn btn-sm btn-primary navbar-btn play-song"><span class="glyphicon glyphicon-play"></span> Play</button>
                                        <button class="btn btn-sm btn-primary navbar-btn add-to-media-player add-song-to-media-player" data-source="soundcloud" data-url="{{attributes.audioUrl}}"><span class="glyphicon glyphicon-music"></span> Add To Playlist</button>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
<div class="col-sm-2 hidden-xs right-side">
    <div class="panel panel-primary">
        <div class="panel-heading panel-heading-small text-center">Music</div>
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/music">Music</a></li>
            <li class="active">{{tag}}</li>
        </ol>
        <div class="panel-body">
            Welcome to the home of The Nightstalker.  Here, you will find all of the music I have released over the years, listen to stripped down versions of some of my vocal works, and get a sneak peak at what I'm working on.
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading panel-heading-small text-center">RSS Feed</div>
        <div class="panel-body">
            <div class="rss-text text-center">Subscribe to The Nightstalker's {{tag}} songs:</div>
            <div class="text-center">
                <a href="https://roncli.com/music.rss?tag={{tag}}" title="Subscribe via RSS" target="_blank" class="rss-link"><div class="bookmark bookmark-rss"></div></a>
            </div>
        </div>
    </div>
    {{partial "site/share"}}
    {{#if page.attributes.siblings}}
        <div class="btn-group-vertical btn-group-xs panel panel-primary">
            <div class="panel-heading panel-heading-small text-center">{{page.attributes.parentTitle}}</div>
            <div class="sibling-pages">
                <div class="scroller-wrapper" id="sibling-pages-wrapper">
                    <div class="scroller">
                        <div class="siblings btn-group-vertical btn-group-xs">
                            {{#each page.attributes.siblings}}
                                {{#ifCond id "===" @root.page.attributes.page.id}}
                                    <a class="btn btn-warning selected" href="{{{url}}}">{{shortTitle}}</a>
                                {{/ifCond}}
                                {{#ifCond id "!==" @root.page.attributes.page.id}}
                                    <a class="btn btn-default" href="{{{url}}}">{{shortTitle}}</a>
                                {{/ifCond}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    {{#if page.attributes.children}}
        <div class="btn-group-vertical btn-group-xs panel panel-primary">
            <div class="panel-heading panel-heading-small text-center">{{#if page.attributes.page.shortTitle}}{{page.attributes.page.shortTitle}}{{else}}{{page.attributes.page.title}}{{/if}}</div>
            <div class="children-pages">
                <div class="scroller-wrapper" id="children-pages-wrapper">
                    <div class="scroller">
                        <div class="children btn-group-vertical btn-group-xs">
                            {{#each page.attributes.children}}
                                <a class="btn btn-default" href="{{{url}}}">{{shortTitle}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</div>
